/*#Single or Mulitple modal base css
================================================== */

	.modalDialog {
		position: fixed;
		font-family: Arial, Helvetica, sans-serif;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		background: rgba(0, 0, 0, 0.7);
		z-index: 99999;
		opacity: 0;
		-webkit-transition: opacity 400ms ease-in;
		-moz-transition: opacity 400ms ease-in;
		transition: opacity 400ms ease-in;
		pointer-events: none;
	}
	.modalDialog img {
		width: 95%;
	}
	.modalDialog:target {
		opacity: 1;
		pointer-events: auto;
	}
	.modalDialog>div {
		width: 40%;
		position: relative;
		margin: 25px auto;
		padding: 5px 20px 13px 20px;
		border-radius: 10px;
		background: #fff;
	}
	 
	.modal-close {
		color: black;
		font-size: 40px;
		position: absolute;
		right: 12px;
		text-decoration: none;
	}
	.modal-close:hover {
		color: red;
	}
	
	@media screen and (max-width: 479px) {
		.modalDialog>div {
			width: 80%
		}
		.modalDialog img {
			width: 75%;
		}
		img.vert-prop {width: 85%;}
	}
	
	.view-detail {position: relative;}

